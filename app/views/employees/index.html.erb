<p style="color: green"><%= notice %></p>

<h1>Employees</h1>
<%= current_employee.email%>
<br>
<div id="employees">
  <% @employees.each do |employee| %>
    <% if employee == current_employee %>
      <%= render employee %>
      
      <p>
        <%= link_to "Show this employee", employee %>
      </p>
    <%end%>
  <% end %>
</div>

<%= link_to "New employee", new_employee_path %>
